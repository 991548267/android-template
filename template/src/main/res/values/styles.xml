<resources>

    <!-- Base application theme. -->
    <style name="TemplateTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中颜色-->
        <item name="colorAccent">@color/text_color_blue</item>
    </style>

    <style name="TemplateTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemplateTheme.NoActionBar.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--AppCompatActivity设置透明背景 - xy18990的博客 - CSDN博客 -->
    <!--http://blog.csdn.net/xy18990/article/details/69569438-->
    <style name="TemplateTheme.Fullscreen" parent="TemplateTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TemplateTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TemplateTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityTranslucent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--toolbar back key color -->
    <style name="toolbar_theme" parent="TemplateTheme.AppBarOverlay">
        <!--默认返回键颜色-->
        <item name="colorControlNormal">@color/bg_view_white</item>
        <!--字体颜色-->
        <item name="android:textColorPrimary">@color/bg_view_white</item>
    </style>

    <!--toolbar back key color -->
    <style name="search_toolbar_theme" parent="TemplateTheme.AppBarOverlay">
        <!--默认返回键颜色-->
        <item name="colorControlNormal">@color/bg_view_blue</item>
        <!--字体颜色-->
        <item name="android:textColorPrimary">@color/text_color_black</item>
    </style>

