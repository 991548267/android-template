<?xml version="1.0" encoding="utf-8"?><!--shape demo展示-->
<!--    android:shape-->
<!--    line       线  -->
<!--    rectangle  矩形（圆角矩形）  -->
<!--    oval       椭圆，圆  -->
<!--    ring       圆环-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <!--    stroke      边框-->
    <!--    android:width     边框线宽-->
    <!--    android:color     边框颜色-->
    <!--    android:dashGap   边框虚线空白长度-->
    <!--    android:dashWidth 边框虚线填充长度-->
    <stroke
        android:width="@dimen/x1"
        android:color="@color/bg_all_foreground"
        android:dashWidth="@dimen/x5"
        android:dashGap="@dimen/x1" />

    <!--    corners     角度-->
    <!--    android:bottomLeftRadius    下左角度-->
    <!--    android:bottomRightRadius   下右角度-->
    <!--    android:radius              整体角度-->
    <!--    android:topLeftRadius       上左角度-->
    <!--    android:topRightRadius      上右角度-->
    <corners
        android:bottomLeftRadius="@dimen/x1"
        android:bottomRightRadius="@dimen/x3"
        android:radius="@dimen/x5"
        android:topLeftRadius="@dimen/x9"
        android:topRightRadius="@dimen/x6" />

    <!--    solid       填充-->
    <!--    android:color   填充颜色-->
    <solid android:color="@color/bg_all_background" />

    <!--    size        尺寸-->
    <!--    android:width   宽-->
    <!--    android:height  高-->
    <size
        android:width="@dimen/x35"
        android:height="@dimen/x35" />

    <!--    padding     内容离边框的间距-->
    <padding
        android:bottom="@dimen/x15"
        android:left="@dimen/x10"
        android:right="@dimen/x20"
        android:top="@dimen/x5" />

    <!--    gradient    渐变-->
    <!--    android:angle       角度-->
    <!--    android:centerColor 中间颜色-->
    <!--    android:endColor    结束颜色-->
    <!--    android:startColor  开始颜色-->
    <gradient
        android:angle="45"
        android:centerColor="@color/Green"
        android:endColor="@color/Blue"
        android:startColor="@color/Red" />

</shape>